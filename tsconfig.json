{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016", 
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist", "docs/**/*", "src/ui/**/*", "src/services/workflow-engine/**/*"]
}
